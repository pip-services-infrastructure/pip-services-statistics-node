import { Category } from 'pip-services-runtime-node';
import { ComponentDescriptor } from 'pip-services-runtime-node';
import { ComponentSet } from 'pip-services-runtime-node';
import { LambdaFunction } from 'pip-services-runtime-node';

import { StatisticsMicroservice } from '../run/StatisticsMicroservice';
import { IStatisticsBusinessLogic } from '../logic/IStatisticsBusinessLogic';

export class StatisticsLambdaFunction extends LambdaFunction {
    private _logic: IStatisticsBusinessLogic;

    constructor() {
        super(new StatisticsMicroservice());
    }

    public link(components: ComponentSet) {
		this._logic = <IStatisticsBusinessLogic>components.getOneOptional(
			new ComponentDescriptor(Category.BusinessLogic, "pip-services-statistics", "*", "*")
		);

        super.link(components);        

        this.registerCommands(this._logic.getCommands());
    }
    
}